
<div class="container">
  <div class="container">
    <div class="banner">
      <div class="row">
        <div class="col-sm-4 title">
          <div>
            <h1>Broceliande BackGammon Club</h1>
          </div>
        </div>
        <div class="col-sm-8 photo"></div>
      </div>
    </div>
  </div>

  <% if user_signed_in? && policy(@article).create? %>
    <%= link_to "nouvel article", new_article_path, class:"btn btn-primary" %>
  <% end %>

  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-sm-12 col-md-6">

        <div class="card-article">
          <p id="category"><%= article.category %></p>
          <% if article.photos.attached? %>
            <%= cl_image_tag article.photos.first.key, height: 300, width: 400, crop: :fill %>
          <% else %>
            <%= image_tag 'https://cdn.pixabay.com/photo/2019/02/25/11/39/backgammon-board-4019437__340.jpg' %>
          <% end %>
          <h3><%= article.title %></h3>
          <p class="card-content"><%= article.content.split.first(30).join(" ") %>...</p>

          <%#= link_to "lire", article_path(article) class:"lire" %>
          <% if user_signed_in? && policy(article).update? %>
            <%= link_to "modifier", edit_article_path(article)%>
          <% end %>
          <% if user_signed_in? && policy(article).destroy? %>
            <%= link_to "supprimer", article_path(article), method: :delete, data: {confirm: "Certain de vouloir supprimer cet article?"} %>
          <% end %>
        </div>

      </div>
    <% end %>
  </div>

</div>


